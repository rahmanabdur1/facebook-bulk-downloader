{
    "manifest_version": 3,
    "name": "Facebook Bulk Photo Downloader",
    "description": "Download multiple photos from Facebook at once.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "downloads",
      "storage",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://*.facebook.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  